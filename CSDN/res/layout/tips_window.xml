<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_dialog"
    android:layout_marginLeft="25dp" 
    android:layout_marginRight="25dp"
    android:orientation="vertical" >
    <LinearLayout 
        android:id="@+id/headLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="10dp"
            android:src="@drawable/information"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="5dp"
            android:text="@string/information"
            android:textSize="22sp"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_divider"/>
    <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/ok_exit"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_divider"/>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <View 
            android:id="@+id/dividerLine"
	        android:layout_width="1dp"
	        android:layout_height="match_parent"
	        android:layout_centerInParent="true"
	        android:background="@color/view_divider"/>
        <TextView 
            android:id="@+id/canelBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/dividerLine"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="@string/canel"
            android:textSize="18sp"
            android:clickable="true"
            android:textColor="@android:color/black"
            android:background="@drawable/pressbtn"/>
        <TextView 
            android:id="@+id/okBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/dividerLine"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="@string/ok"
            android:textSize="18sp"
            android:clickable="true"
            android:textColor="@android:color/black"
            android:background="@drawable/pressbtn"/>
    </RelativeLayout>
    

</LinearLayout>
